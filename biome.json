{
    "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": {
                    "level": "on",
                    "options": {
                        "groups": [
                            [":BUN:", ":NODE:"],
                            [":PACKAGE:", ":PACKAGE_WITH_PROTOCOL:"],
                            ":BLANK_LINE:",
                            ":ALIAS:",
                            ":BLANK_LINE:",
                            ":PATH:"
                        ]
                    }
                }
            }
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedVariables": "error",
                "noUnusedImports": "error"
            },
            "security": {
                "noDangerouslySetInnerHtml": "off"
            },
            "suspicious": {
                "noConsole": { "level": "off", "options": { "allow": ["log"] } }
            },
            "a11y": {
                "noSvgWithoutTitle": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "lineWidth": 120,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "formatWithErrors": false
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded",
            "trailingCommas": "es5",
            "quoteStyle": "single",
            "arrowParentheses": "always",
            "bracketSameLine": false,
            "bracketSpacing": true,
            "jsxQuoteStyle": "double",
            "quoteProperties": "asNeeded"
        }
    },
    "json": {
        "formatter": {
            "trailingCommas": "none"
        },
        "parser": {
            "allowComments": true
        }
    }
}
